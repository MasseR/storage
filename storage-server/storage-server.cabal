name:                storage-server
version:             0.1.0.0
-- synopsis:
-- description:
-- bug-reports:
license:             MIT
license-file:        LICENSE
author:              Mats Rauhala
maintainer:          mats.rauhala@iki.fi
-- copyright:
-- category:
build-type:          Simple
extra-source-files:  CHANGELOG.md

library
  default-extensions:  NoImplicitPrelude
                     , OverloadedStrings
                     , DerivingStrategies
                     , DeriveAnyClass
                     , StandaloneDeriving
                     , DerivingVia
                     , DeriveGeneric
  exposed-modules:     Storage.Server
                     , Control.Monad.App
                     , Data.Config
                     , Data.Port
                     , Storage.Environment
                     , Storage.Logger
                     , Storage.Server.Object
                     , Storage.Server.System
                     , Storage.Server.System.Stats
                     , Storage.Metrics
                     , Storage.Metrics.Carbon
                     , Storage.Main
  -- other-extensions:
  build-depends:       base >=4.12 && <4.13
                     , aeson
                     , comonad
                     , ekg-carbon
                     , ekg-core
                     , generic-lens
                     , katip
                     , lens
                     , masse-prelude
                     , merkle
                     , mtl
                     , pipes
                     , pipes-bytestring
                     , servant
                     , servant-pipes
                     , servant-server
                     , servant-swagger
                     , servant-swagger-ui
                     , storage-api
                     , storage-core
                     , transformers
                     , unliftio
                     , wai
                     , wai-middleware-metrics
                     , warp
                     , yaml
                     , genvalidity
                     , genvalidity-text
                     , QuickCheck
  hs-source-dirs:      src
  default-language:    Haskell2010

executable storage-server
  ghc-options: -Wall -rtsopts -threaded
  main-is:             Main.hs
  -- other-extensions:
  build-depends:       base >=4.12 && <4.13
                     , storage-server
  hs-source-dirs:      app
  default-language:    Haskell2010

test-suite test
  other-modules:       Test.Server
                       Test.Config
                       Test.Golden
  type:                exitcode-stdio-1.0
  main-is:             test.hs
  default-extensions:  OverloadedStrings
  hs-source-dirs:
      test
  build-depends:       base >=4.12 && <4.13
                     , hspec
                     , genvalidity-hspec
                     , genvalidity-hspec-aeson
                     , hspec-golden-aeson
                     , QuickCheck
                     , masse-prelude
                     , storage-client
                     , storage-server
                     , aeson
  mixins:              masse-prelude (MyPrelude as Prelude)
                     , base (Prelude as BasePrelude)
                     , base hiding (Prelude)
